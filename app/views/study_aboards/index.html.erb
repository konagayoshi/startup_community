<p id="notice"><%= notice %></p>

<h1>Listing Study Aboards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Destination</th>
      <th>Start time</th>
      <th>Duration</th>
      <th>Sponsor</th>
      <th>Requirements</th>
      <th>Content</th>
      <th>Contact</th>
      <th>University</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_aboards.each do |study_aboard| %>
      <tr>
        <td><%= study_aboard.title %></td>
        <td><%= study_aboard.destination %></td>
        <td><%= study_aboard.start_time %></td>
        <td><%= study_aboard.duration %></td>
        <td><%= study_aboard.sponsor %></td>
        <td><%= study_aboard.requirements %></td>
        <td><%= study_aboard.content %></td>
        <td><%= study_aboard.contact %></td>
        <td><%= link_to 'Show', [study_aboard.university, study_aboard] %></td>
        <% if current_user && current_user.id == study_aboard.university.user_id %>
        <td><%= link_to 'Edit', edit_university_study_aboard_path(study_aboard.university, study_aboard) %></td>
        <td><%= link_to 'Destroy', [study_aboard.university, study_aboard], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.id == @university.user_id %>
<%= link_to 'New Study Aboard', new_university_study_aboard_path %>
<% end %>