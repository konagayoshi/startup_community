<h1>New student</h1>

<!--<%= render 'form' %>-->

<%= form_for :student, url: students_path do |f| %>
  <p>
    <%= f.label :email, "Email" %><br>
    <%= f.text_field :email, value: current_user.email %>
  </p>

  <p>
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :date_of_birth, "Date of birth" %><br>
    <%= f.text_field :date_of_birth %>
  </p>  
 
  <p>
    <%= f.label :university, "University" %><br>
    <%= f.text_field :university %>
  </p>
  
  <p>
    <%= f.label :major, "Major" %><br>
    <%= f.text_field :major %>
  </p>
  
  <p>
    <%= f.label :country, "Country" %><br>
    <%= f.text_field :country %>
  </p>
  
  <p>
    <%= f.label :phone, "Phone Number" %><br>
    <%= f.text_field :phone %>
  </p>  
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', students_path %>
