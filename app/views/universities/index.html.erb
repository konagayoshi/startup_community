<p id="notice"><%= notice %></p>

<h1>Listing Universities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Introduction</th>
      <th>Contact</th>
      <th>Cooperation</th>
      <th>Rank</th>
      <th>Reputation</th>
      <th>Checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.name %></td>
        <td><%= university.location %></td>
        <td><%= university.introduction %></td>
        <td><%= university.contact %></td>
        <td><%= university.cooperation %></td>
        <td><%= university.rank %></td>
        <td><%= university.reputation %></td>
        <td><%= university.checked %></td>
        <td><%= link_to 'Show', university %></td>
        <% if current_user && current_user.id == university.user_id %>
        <td><%= link_to 'Edit', edit_university_path(university) %></td>
        <td><%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

